<!DOCTYPE html>
<head>
    <title>Friends</title>
    <link rel='stylesheet' href='/stylesheets/app.css'>
</head>
<body>
<div class="heading">
<h1>My Friends</h1>
</div>
<div class="content">
<div id="create">
    <form action="/" method="POST">
        <input type=text name="firstname" placeholder="First Name">
        <input type=text name="lastname" placeholder="LastName">
        <button type="submit">Create</button>
    </form>
</div>
<button style="float: right; width: 10%; margin-right: 12%;" onclick="displayCreate()">Create New Friend</button>
<table>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>EDIT/DELETE</th>
    </tr>
    <% friends.forEach(function(f){ %>
        <tr>
            <td><%=f.id %></td>
            <td><%= f.firstname %></td>
            <td><%= f.lastname %></td>
            <td><button onclick="onClick('<%=JSON.stringify(f)%>')">Edit</button>
               <form action="/delete/<%=f.id%>?_method=DELETE" method="POST" ><button type=submit>Delete</button></td></form>
        </tr>
   <%  }) %>
</table>
</div>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div id="modal-content">
    <div class="close">&times;</div>
  </div>

</div>
<script src='/script/app.js'></script>

</body>
</html>